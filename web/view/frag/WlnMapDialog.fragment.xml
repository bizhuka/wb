<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form">
    <Dialog contentWidth="85%" title="Карта и пробег" afterOpen="afterMapOpen">

        <content>
            <f:Form editable="false">
                <f:layout>
                    <f:ResponsiveGridLayout singleContainerFullSize="false"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Количество сообщений">
                                <f:fields>
                                    <Text text="{wialon>/count}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Первое сообщение">
                                <f:fields>
                                    <Text text="{wialon>/from}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Последнее сообщение">
                                <f:fields>
                                    <Text text="{wialon>/to}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Пробег">
                                <f:fields>
                                    <Text text="{wialon>/mileage}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Пробег за период">
                                <f:fields>
                                    <Text text="{wialon>/diff}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>

            <core:HTML content='&lt;div id=&quot;id_map&quot; class=&quot;content&quot;/&gt;'>
            </core:HTML>

            <Table growing="true"
                   growingScrollToLoad="true"
                   noDataText="Нет данных" items="{wialon>/messages}">
                <columns>
                    <Column demandPopin="true" hAlign="Left">
                        <header>
                            <Label text="Дата и время"/>
                        </header>
                    </Column>
                    <Column demandPopin="true" hAlign="Right">
                        <header>
                            <Label text="Долгота"/>
                        </header>
                    </Column>
                    <Column demandPopin="true" hAlign="Right">
                        <header>
                            <Label text="Широта"/>
                        </header>
                    </Column>
                    <Column demandPopin="true" hAlign="Right">
                        <header>
                            <Label text="Пробег"/>
                        </header>
                    </Column>
                    <Column demandPopin="true" hAlign="Right">
                        <header>
                            <Label text="Датчик топлива"/>
                        </header>
                    </Column>
                </columns>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier title="{wialon>date}"/>
                        <ObjectIdentifier title="{wialon>lon}"/>
                        <ObjectIdentifier title="{wialon>lat}"/>
                        <ObjectIdentifier title="{wialon>mileage}"/>
                        <ObjectIdentifier title="{wialon>fuel}"/>
                    </cells>
                </ColumnListItem>
            </Table>
        </content>

        <beginButton>
            <Button text="Отмена" press="closeMapDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>