<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <Dialog contentWidth="70%" contentHeight="60%" title="Сообщения SAP"
            verticalScrolling="false"
            resizable="true"
            afterClose="onMessageAfterClose">

        <content>
            <MessageView items="{mes>/items}">
                <items>
                    <MessageItem
                            title="{mes>message}"
                            description=""
                            type="{mes>type}"
                    />
                </items>
            </MessageView>
        </content>

        <beginButton>
            <Button text="Отмена" press="onMessageClose"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>