<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <Dialog afterClose="onLgortAfterClose"
            showHeader="false">

        <customHeader design="Header">
            <Bar>
                <contentMiddle>
                    <Title text="Склады"/>
                </contentMiddle>

                <contentRight>
                    <Button icon="sap-icon://synchronize" tooltip="Обновить список складов" press="onSyncLgorts"/>
                </contentRight>
            </Bar>
        </customHeader>

        <subHeader>
            <Bar>
                <contentMiddle>
                    <SearchField id="id_lgort_search" width="100%" search="lgortSearch"/>
                </contentMiddle>
            </Bar>
        </subHeader>

        <content>
            <Table id="id_lgort_table"
                   growing="true" growingScrollToLoad="true"
                   mode="SingleSelectMaster" modeAnimationOn="false"
                   noDataText="Нет данных" items="{wb>/Lgorts}"
                   selectionChange="onSelectionChange">

                <columns>
                    <Column>
                        <Text text="Завод"/>
                    </Column>
                    <Column>
                        <Text text="Склад"/>
                    </Column>
                    <Column>
                        <Text text="Описание"/>
                    </Column>
                </columns>

                <ColumnListItem>
                    <cells>
                        <Label text="{wb>Werks}"/>
                        <Label text="{wb>Lgort}"/>
                        <Label text="{wb>Lgobe}"/>
                    </cells>
                </ColumnListItem>
            </Table>
        </content>

        <beginButton>
            <Button text="Отмена" press="onLgortCloseDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>