<mvc:View xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:semantic="sap.m.semantic"
          xmlns:layout="sap.ui.layout"
          controllerName="com.modekzWaybill.controller.Start">

    <semantic:FullscreenPage id="start" title="{i18n>title}">
        <semantic:content>

            <layout:VerticalLayout class="sapUiResponsiveMargin">

                <Title
                        titleStyle="H3"
                        text="Заявки и путевые листы"
                        class="sapUiTinyMarginBegin"/>
                <layout:HorizontalLayout allowWrapping="true">

                    <GenericTile class="sapUiTinyMarginBegin tileLayout"
                                 header="Заявки TORO"
                                 subheader="Количество"
                                 press="showToroRequest">

                        <TileContent unit="Транспортная служба">
                            <NumericContent scale="" value="4" valueColor="Error"/>
                        </TileContent>
                    </GenericTile>

                    <GenericTile class="sapUiTinyMarginBegin tileLayout"
                                 header="Обработанные заявки"
                                 press="showFinishedReqs">

                        <TileContent unit="" footer="">
                            <ImageContent src="sap-icon://activity-2"/>
                        </TileContent>
                    </GenericTile>


                    <GenericTile class="sapUiTinyMarginBegin tileLayout"
                                 header="Путевые листы"
                                 subheader="Количество"
                                 press="showWayill">

                        <TileContent unit="Диспетчер НГДУ">
                            <NumericContent scale="" value="2" valueColor="Warning" icon="sap-icon://shipping-status"/>
                        </TileContent>
                    </GenericTile>
                </layout:HorizontalLayout>

                <Title
                        titleStyle="H3"
                        text="Контроль и осмотр"
                        class="sapUiTinyMarginBegin sapUiMediumMarginTop"/>
                <layout:HorizontalLayout allowWrapping="true">

                    <GenericTile class="sapUiTinyMarginBegin tileLayout"
                                 header="Медосмотр"
                                 press="setDriverValidDate">

                        <TileContent unit="" footer="">
                            <ImageContent src="sap-icon://syringe"/>
                        </TileContent>
                    </GenericTile>

                    <GenericTile class="sapUiTinyMarginBegin tileLayout"
                                 header="Контроль ТС"
                                 press="eoValidation">

                        <TileContent unit="" footer="">
                            <ImageContent src="sap-icon://vehicle-repair"/>
                        </TileContent>
                    </GenericTile>

                </layout:HorizontalLayout>


                <Title
                        titleStyle="H3"
                        text="Прочее"
                        class="sapUiTinyMarginBegin sapUiMediumMarginTop"/>
                <layout:HorizontalLayout allowWrapping="true">


                    <GenericTile class="sapUiTinyMarginBegin tileLayout"
                                 header="Analytics Cloud"
                                 subheader=""
                                 press="openAnalytics">
                        <TileContent unit="" footer="">
                            <ImageContent src="sap-icon://kpi-corporate-performance"/>
                        </TileContent>
                    </GenericTile>

                    <GenericTile class="sapUiTinyMarginBegin tileLayout"
                                 header="Загрузка справочников"
                                 press="importR3Tables">

                        <TileContent unit="" footer="">
                            <ImageContent src="sap-icon://synchronize"/>
                        </TileContent>
                    </GenericTile>

                    <GenericTile class="sapUiTinyMarginBegin tileLayout"
                                 header="Шаблоны путевых листов"
                                 press="showPdfTemplates">

                        <TileContent unit="" footer="Бланки">
                            <ImageContent src="sap-icon://pdf-attachment"/>
                        </TileContent>
                    </GenericTile>

                    <GenericTile class="sapUiTinyMarginBegin tileLayout"
                                 header="Руводство пользователя"
                                 subheader="PDF документ"
                                 press="showDocumentation">
                        <TileContent unit="" footer="Транспортная служба">
                            <ImageContent src="sap-icon://hint"/>
                        </TileContent>
                    </GenericTile>
                </layout:HorizontalLayout>

            </layout:VerticalLayout>

        </semantic:content>

    </semantic:FullscreenPage>

</mvc:View>